<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="iman.reserve.hotel">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="iman.reserve.hotel.CityActivity"
            android:label="@string/app_name"
            android:parentActivityName="iman.reserve.hotel.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="iman.reserve.hotel.HotelActivity"
            android:parentActivityName="iman.reserve.hotel.CityActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="iman.reserve.hotel.ReserveActivity"
            android:label="@string/title_activity_reserve"
            android:parentActivityName="iman.reserve.hotel.HotelActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="info.androidhive.hotel.iman.reserve.hotel.HotelActivity" />
        </activity>
        <activity
            android:name="iman.reserve.hotel.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="iman.reserve.hotel.NaviActivity"
            android:label="@string/title_activity_navi"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>